<div id="{{ modalId | default('confirmation-modal-window') }}" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ modalTitle | default('Confirm action') | trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'global.close' | trans }}"></button>
            </div>
            <div class="modal-body">
                <p>{{ modalMessage | trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary js-btn-confirm">
                    {{ confirmButtonText | default('Ð¡onfirm') | trans }}
                </button>
                <button type="button" class="btn btn-danger js-btn-cancel" data-bs-dismiss="modal">
                    {{ cancelButtonText | default('Cancel') | trans }}
                </button>
            </div>
        </div>
    </div>
</div>

