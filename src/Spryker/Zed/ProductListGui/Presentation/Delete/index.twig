{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Product List removal confirmation' | trans %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {{ parent() }}
    {{ backActionButton(app.request.headers.get('referer'), 'Back' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}
            <div class="row">
                <div class="col-sm-12">
                    <span>{{ 'Are you sure you want to remove this list? Removing this list will also remove all associated functionalities.' | trans }}</span>
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-sm-12">
                    <a href="{{ app.request.headers.get('referer') }}" class="btn btn-back">{{ 'Back' | trans }}</a>
                    {{ form_start(deleteForm, {
                        'action': url('/product-list-gui/delete/confirm', {'id-product-list': idProductList})
                    }) }}
                        <input type="submit"
                               class="btn btn-danger safe-submit"
                               value="{{ 'Remove List' | trans }}"/>
                    {{ form_end(deleteForm) }}
                </div>
            </div>

        {% endblock %}

    {% endembed %}

{% endblock %}
